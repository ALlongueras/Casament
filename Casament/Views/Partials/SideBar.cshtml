@using Member = umbraco.cms.businesslogic.member.Member
@{
    ViewBag.Title = "MainMenu";
}

<section id="left-sidebar">
        
        <div class="logo">
          <a href="#intro" class="link-scroll"><img src="images/other_images/logo.png" alt="Twilli Air"></a>
        </div><!-- .logo -->

        <!-- Menu Icon for smaller viewports -->
        <div id="mobile-menu-icon" class="visible-xs" onClick="toggle_main_menu();"><span class="glyphicon glyphicon-th"></span></div>

        <ul id="main-menu">
          <li id="menu-item-text" class="menu-item scroll"><a href="#text">Text</a></li>
          <li id="menu-item-carousel" class="menu-item scroll"><a href="#carousel">Carousel</a></li>
          <li id="menu-item-grid" class="menu-item scroll"><a href="#grid">Grid</a></li>
          <li id="menu-item-featured" class="menu-item scroll"><a href="#featured">Featured</a></li>
            <li id="menu-item-contact" class="menu-item scroll"><a href="#contact">Contact</a></li>
            <br/>
            <br/>
            @{
                if (User.Identity.IsAuthenticated)
                {
                    //enviar a la home privada
                    <li id="menu-item-contact" class="menu-item scroll"><span class="bold">Logged in: @Member.GetCurrentMember().getProperty("nickName").Value</span></li>
            <li id="menu-item-contact" class="menu-item scroll">@Html.ActionLink("Log out", "MemberUmbLogout", "SignInForm")</li>
                }
            }
            <li>
                <div id="getting-started"></div>
  <script type="text/javascript">
    $("#getting-started").countdown("2015/05/30", function(event) {
      $(this).text(
        event.strftime('%D days %H:%M:%S')
      );
    });
  </script>
            </li>
        </ul><!-- #main-menu -->

</section><!-- #left-sidebar -->


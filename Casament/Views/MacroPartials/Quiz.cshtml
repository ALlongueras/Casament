                        <button class="btn btn-default col-sm-2" type="button">Resposta 3</button>
                    </span>
                    @*<label class="form-control">This is the first answer</label>*@
                </div>
                <div class="input-group" data-type="answer4">
                    <span class="input-group-btn">
                        <button class="btn btn-default col-sm-2" type="button">Resposta 4</button>
                    </span>
                    @*<label class="form-control">This is the first answer</label>*@
